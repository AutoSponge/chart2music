{
    "name": "chart2music",
    "version": "0.4.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "description": "Turns charts into music so the blind can hear data",
    "files": [
        "dist/*"
    ],
    "keywords": [
        "a11y",
        "accessibility",
        "audio",
        "audio graph",
        "chart",
        "dataviz",
        "data visualization",
        "graph",
        "screen reader",
        "sonification"
    ],
    "homepage": "https://github.com/julianna-langston/chart2music#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/julianna-langston/chart2music.git"
    },
    "bugs": {
        "url": "https://github.com/julianna-langston/chart2music/issues"
    },
    "scripts": {
        "build": "rollup -c rollup.config.js --silent",
        "clean": "rimraf ./dist ./coverage",
        "start": "concurrently \"rollup -c rollup.config.js -w\" \"http-server .\" \"jest -o\"",
        "lint": "eslint src/ --ext .ts --fix",
        "lint-staged": "lint-staged",
        "format": "prettier --config .prettierrc.json src/**/*.ts --write && prettier examples/**/*.js --write",
        "prepare": "husky install",
        "test": "jest"
    },
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.3.3",
        "@types/jest": "^28.1.3",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.30.7",
        "concurrently": "^7.2.2",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jsdoc": "^39.3.3",
        "http-server": "^14.1.1",
        "husky": "^6.0.0",
        "jest": "^28.1.1",
        "jest-environment-jsdom": "^28.1.1",
        "lint-staged": "^13.0.3",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.75.7",
        "rollup-plugin-delete": "^1.2.0",
        "rollup-plugin-dts": "^4.2.2",
        "ts-jest": "^28.0.5",
        "tslib": "^2.4.0",
        "typescript": "4.7.4"
    },
    "resolutions": {
        "glob-parent": "^6.0.1"
    }
}
